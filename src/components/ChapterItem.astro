---
import type { CollectionEntry } from "astro:content";

type Props = {
  data: CollectionEntry<"chapters">;
};

const { data } = Astro.props;
export const prerender = true;
---

<a
  transition:name={`chapter-name-${data.data.chapter_number}`}
  href={`/${data.id}`}
  class="hover:bg-surface p-2 transition-colors"
>
  <p class="text-xs" style="color: var(--color-text-muted)">
    Chapter {data.data.chapter_number}
  </p>
  <h2 class="font-medium" style="color: var(--color-text-primary)">
    {data.data.name_meaning}
  </h2>
</a>
